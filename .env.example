# Order Gateway API Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pos_gateway
DB_USER=pos_gateway_user
DB_PASSWORD=P0SG@teway2024!
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Security Configuration
API_KEY_HEADER=X-API-Key
JWT_SECRET=your-super-secret-jwt-key-change-in-production
BCRYPT_ROUNDS=12

# Rate Limiting & Proxy Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
# Enable proxy trust for production deployments (Render, Heroku, Railway, etc.)
# This fixes "X-Forwarded-For header is set but trust proxy is false" error
TRUST_PROXY=true
# Skip rate limiting in development (true/false)
SKIP_RATE_LIMIT=false

# Integration with POSSyncAgent
SYNC_AGENT_WEBHOOK_URL=http://localhost:8080/webhook/order-status
SYNC_AGENT_API_KEY=sync-agent-secret-key

# Logging & Debugging
LOG_LEVEL=info
LOG_FILE=logs/api.log
# Enable detailed proxy debugging in development (true/false)
DEBUG_PROXY=false

# CORS Configuration
# Include Vite dev server (5173) for frontend development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,https://your-mobile-app.com